# PostgreSQL测试数据库配置示例
# 复制此文件为 database.yml 并填入实际配置

# 默认测试数据库
default:
  host: localhost
  port: 5432
  database: postgres_modern_test
  user: postgres
  password: your_password_here
  
# 开发环境
development:
  host: localhost
  port: 5432
  database: postgres_modern_dev
  user: postgres
  password: dev_password
  
# CI环境
ci:
  host: localhost
  port: 5432
  database: postgres
  user: postgres
  password: postgres
  
# 测试配置
test_options:
  # 超时时间（秒）
  timeout: 30
  
  # 是否在测试失败时保留数据
  keep_data_on_failure: false
  
  # 并行测试进程数
  parallel_workers: 4
  
  # 是否启用性能测试
  enable_performance_tests: true
  
  # 性能基准（毫秒）
  performance_thresholds:
    simple_query: 10
    join_query: 50
    aggregation_query: 100
    full_table_scan: 1000

