{
  "database": {
    "name": "pgbench_test",
    "host": "localhost",
    "port": 5432,
    "user": "postgres"
  },
  "test_data": {
    "scale_factor": 100,
    "description": "约 1000 万行数据"
  },
  "benchmark": {
    "clients": [8, 16, 32, 64],
    "threads": 32,
    "duration": 300,
    "warmup_duration": 60
  },
  "tests": [
    {
      "name": "baseline",
      "description": "标准 TPC-B 测试",
      "enabled": true,
      "options": []
    },
    {
      "name": "readonly",
      "description": "只读测试",
      "enabled": true,
      "options": ["-S"]
    },
    {
      "name": "writeonly",
      "description": "只写测试",
      "enabled": true,
      "options": ["-N"]
    }
  ],
  "monitoring": {
    "enabled": true,
    "interval": 1,
    "output_prefix": "monitor"
  },
  "output": {
    "directory": "./results",
    "include_timestamp": true,
    "analyze_latency": true,
    "extract_metrics": true
  }
}
